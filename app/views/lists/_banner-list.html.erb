<% if @list.photo.attached? %>
  <div class="banner text-white vh-50" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key%>');">
    <div class="container text-center">
      <h1><%= @list.name %></h1>
    </div>
  </div>
<% else %>
  <div class="banner text-white vh-50" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80');">
    <div class="container text-center">
      <h1><%= @list.name %></h1>
    </div>
  </div>
<% end %>
