<%= render 'navbar' %>
<div class="banner text-white vh-50" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1585647347483-22b66260dfff?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2940&q=80');">
  <div class="container text-center">
    <h1> All movie lists </h1>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <% @lists.each do |list| %>
      <div class="col-3 card-category m-2" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80');">
        <%= link_to list.name, list %>
      </div>
    <% end %>
  </div>
</div>
<br>
<br>
<%= link_to "⭐️ Create new list ⭐️", new_list_path, class: "btn btn-primary" %>
